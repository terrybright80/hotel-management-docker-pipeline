pipeline {
    tools {
        maven 'maven3.9.2'
    }
    
    agent any

    environment {
        registry = "304166835724.dkr.ecr.ca-central-1.amazonaws.com/hotelapp"
        AWS_REGION = "ca-central-1"
        AWS_ACCOUNT_ID = "304166835724"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/master']], 
                    extensions: [], 
                    userRemoteConfigs: [[
                        url: 'https://github.com/terrybright80/hotel-management-docker-pipeline.git'
                    ]]
                )
            }
        }
        
        stage('Build Image') {
            steps {
                script {
                    // Use shell commands instead of docker object
                    sh """
                        docker build -t ${registry}:${BUILD_NUMBER} .
                        docker tag ${registry}:${BUILD_NUMBER} ${registry}:latest
                    """
                }
            }
        }
        
        stage('Push to ECR') {
            steps {
                script {
                    // Login to ECR
                    sh """
                        aws ecr get-login-password --region ${AWS_REGION} | \
                        docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
                        
                        # Push both tags
                        docker push ${registry}:${BUILD_NUMBER}
                        docker push ${registry}:latest
                    """
                }
            }
        }
        
        stage('List Images') {
            steps {
                sh 'docker images | grep hotelapp'
            }
        }
    }
    
    post {
        always {
            echo "Pipeline completed for build #${BUILD_NUMBER}"
        }
        success {
            echo "Image successfully pushed to ECR: ${registry}:${BUILD_NUMBER}"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}